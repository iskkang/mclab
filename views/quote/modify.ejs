  </head>
  <body>
    <div class="container-scroller">
      <%- include('../partials/navbar') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('../partials/sidebar') %>

          <div class="main-panel">
              <div class="content-wrapper">
      <form action="/items/edit/<%= item.id %>" method="POST">
        <div class="container-fluid">
                      <div class="row">
                        <div class="col-lg-8 grid-margin stretch-card mt-3 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Shipping Request UZB</h4>
                                <hr>
                                    <div class="row"> 

        <div class="form-group col-sm-4">
          <label for="status">status:</label>
          <select class="form-control" id="status" name="status" value="<%= item.status %>" required>
            <option value>--Select Status--</option>
                                                  <option value="Checking">Checking</option>
                                                  <option value="Cancel">Cancel</option>
                                                  <option value="진행중">진행중</option>
                                              </select>
        </div>
       <div class="form-group col-sm-4">
          <label for="shpt" class="col-sm-4">Shpt #:</label>
          <input type="text" class="form-control" id="shpt"
                                              name="shpt" value="<%= item.shpt %>"/>
                                          </div>
        <div class="form-group col-sm-4">
          <label for="iqr">Inquiry#:</label>
           <input type="text" class="form-control" id="iqr"
                                              name="iqr" value="<%= item.iqr %>" required />
        </div>
        <div class="form-group col-sm-4">
          <label for="order_date">ORDER DATE:</label>
          <input
            type="date"
            class="form-control"
            id="order_date"
            name="order_date"
            value="<%= item.order_date %>"/>
        </div>
        </div>

        <div class="form-group col-sm-8">
          <label for="shpr">Shipper:</label>
          <input
            type="text"
            class="form-control"
            id="shpr"
            name="shpr"
            value="<%= item.shpr %>"
            required />
        </div>
        <div class="form-group col-sm-10">
          <label for="address">Address:</label>
          <input type="text" class="form-control" id="address"
            name="address" value="<%= item.address %>"/>
        </div>
        <div class="form-group col-sm-10">
          <label for="contact">CONTACT:</label>
          <input type="text" class="form-control" id="contact"
            name="contact" value="<%= item.contact %>" />
        </div>
        <div class="form-group col-sm-10">
          <label for="item">ITEM:</label>
          <input
            type="text"
            class="form-control"
            id="item"
            name="item"
            value="<%= item.item %>"/>
        </div>
  <div class="row">
        <div class="form-group col-sm-3">
          <label for="pol">POL:</label>
          <input type="text" class="form-control" id="pol"
            name="pol" value="<%= item.pol %>"/>
        </div>
        <div class="form-group col-sm-3">
          <label for="pod">POD:</label>
          <input
            type="text"
            class="form-control"
            id="pod"
            name="pod" value="<%= item.pod %>"
            />
        </div>
        <div class="form-group col-sm-3">
          <label for="mode">MODE:</label>
          <select class="form-control" id="mode" name="mode" value="<%= item.mode %>">
            <option value>--Select Status--</option>
            <option value="Checking">Rail</option>
            <option value="Checking">Truck</option>
          </select>
        </div>
        <div class="form-group col-sm-3">
          <label for="type">TYPE:</label>
          <input type="text" class="form-control" id="type" name="type" value="<%= item.type %>" />
        </div>
  </div>
     
</div>
</div>
</div>
